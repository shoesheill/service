[Unit]
Description=Start services required for ASEC
After=network.target docker.service
Requires=docker.service

[Service]
Type=oneshot
User=%i
ExecStart=/bin/bash /home/%i/asec/service/scripts/start.sh
ExecStop=/bin/bash /home/%i/asec/service/scripts/stop.sh
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
